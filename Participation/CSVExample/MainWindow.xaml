        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="421" Margin="0,0,0.333,-0.333" VerticalAlignment="Top">
        <TextBlock HorizontalAlignment="Left" Margin="41,91,0,0" TextWrapping="Wrap" Text="Please enter the file path: " VerticalAlignment="Top"/>
        <TextBox x:Name="txtpath" HorizontalAlignment="Left" Height="22" Margin="183,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238"/>
        <Button x:Name="btnvalidate" Content="Validate" HorizontalAlignment="Left" Height="22" Margin="441,90,0,0" VerticalAlignment="Top" Width="82" Click="btnvalidate_Click"/>
        <Button x:Name="btnprocess" Content="Process File" HorizontalAlignment="Left" Margin="37,146,0,0" VerticalAlignment="Top" Width="141" Height="52" Click="btnprocess_Click"/>
        <ListBox HorizontalAlignment="Left" Margin="37,219,0,10" Width="746"/>

    </Grid>
</Window>
